  <!-- Checkout Section -->
    <div class="container my-5">
        <h2 class="text-center mb-4">Checkout</h2>
        
        <!-- Cart Summary Section -->
        <div class="cart-summary mb-4">
            <h4>Your Order</h4>
            <div class="cart-items">
                <!-- Example Item -->
                <div class="cart-item d-flex justify-content-between align-items-center">
                    <span class="item-name">Classic Milk Tea</span>
                    <span class="item-quantity">x1</span>
                    <span class="item-price">$4.99</span>
                </div>
                <!-- Repeat for each item dynamically -->
                <div class="cart-total mt-3">
                    <h5>Total: <span id="totalPrice">$19.99</span></h5>
                </div>
            </div>
        </div>

        <!-- Delivery and Payment Form -->
        <form action="/process-checkout" method="POST" class="checkout-form">
            <h4>Delivery Information</h4>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="firstName">First Name</label>
                    <input type="text" class="form-control" id="firstName" name="firstName" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="lastName">Last Name</label>
                    <input type="text" class="form-control" id="lastName" name="lastName" required>
                </div>
            </div>
            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" class="form-control" id="address" name="address" required>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="city">City</label>
                    <input type="text" class="form-control" id="city" name="city" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="postalCode">Postal Code</label>
                    <input type="text" class="form-control" id="postalCode" name="postalCode" required>
                </div>
            </div>

            <!-- GCash Payment Information -->
            <h4>Payment Information</h4>
            <div class="form-group">
                <label for="gcashNumber">GCash Number</label>
                <input type="text" class="form-control" id="gcashNumber" name="gcashNumber" placeholder="Enter your GCash number" required>
            </div>
            <p class="text-muted">Please make sure your GCash account has sufficient balance to complete the payment.</p>

            <button type="submit" class="btn btn-pink btn-block">Complete Purchase</button>
        </form>
    </div>