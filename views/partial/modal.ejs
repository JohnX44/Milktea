<!-- Main Cart Modal (cartModal) -->
<div class="modal fade" id="cartModal" tabindex="-1" aria-labelledby="cartModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <!-- Cart View (Step 1) -->
            <div id="cartView" class="modal-step">
                <div class="modal-header">
                    <h5 class="modal-title">Your Cart</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="cartItemsList" class="container-fluid">
                        <!-- Cart items will be dynamically inserted here -->
                    </div>
                </div>
                <div class="modal-footer d-flex flex-column flex-md-row">
                    <h5 class="mr-auto">Total: $<span id="totalPrice">0.00</span></h5>
                    <button type="button" class="btn btn-secondary mb-2 mb-md-0" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="proceedToCheckout">Checkout</button>
                </div>
            </div>

            <!-- Checkout Form View (Step 2) -->
            <div id="checkoutView" class="modal-step d-none">
                <div class="modal-header">
                    <h5 class="modal-title">Checkout</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="checkoutForm">
                        <h6>Delivery Information</h6>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="firstName">First Name</label>
                                <input type="text" class="form-control" id="firstName" name="firstName" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="lastName">Last Name</label>
                                <input type="text" class="form-control" id="lastName" name="lastName" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="address">Address</label>
                            <input type="text" class="form-control" id="address" name="address" required>
                        </div>
                        <div class="form-group">
                            <label for="gcashNumber">GCash Number</label>
                            <input type="text" class="form-control" id="gcashNumber" name="gcashNumber" placeholder="Enter your GCash number" required minlength="10" maxlength="11" pattern="\d*" oninput="validateGcashNumber(this)">
                            <small class="form-text text-muted">Only numbers are allowed, 10-11 digits.</small>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" id="backToCart">Back to Cart</button>
                    <button type="button" class="btn btn-primary" id="proceedToSummary">Review Order</button>
                </div>
            </div>

            <!-- Order Summary View (Step 3) -->
            <div id="summaryView" class="modal-step d-none">
                <div class="modal-header">
                    <h5 class="modal-title">Order Summary</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h6>Order Details</h6>
                    <div id="orderSummaryItems" class="mb-3">
                        <!-- Order summary items will be dynamically inserted here -->
                    </div>
                    <h5>Total Price: $<span id="summaryTotalPrice">0.00</span></h5>
                    <h6>Delivery Information</h6>
                    <p id="summaryDeliveryInfo"></p>
                    <h6>Payment Information</h6>
                    <p>GCash Number: <span id="summaryGcashNumber"></span></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" id="backToCheckout">Back to Checkout</button>
                    <button type="button" class="btn btn-success" id="confirmPurchase" disabled>Confirm Purchase</button>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- Balance Check Modal -->
<div class="modal fade" id="balanceModal" tabindex="-1" aria-labelledby="balanceModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="balanceModalLabel">Confirm GCash Balance</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Please confirm that you have sufficient balance in your GCash account for this purchase.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="confirmBalanceCheck">Confirm Balance</button>
            </div>
        </div>
    </div>
</div>

<!-- Thank You Modal -->
<div class="modal fade" id="thankYouModal" tabindex="-1" aria-labelledby="thankYouModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content text-center">
            <div class="modal-header border-0">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body d-flex flex-column align-items-center">
                <h3 class="text-success">Thank You!</h3>
                <p>Your order has been successfully placed.</p>
                <p class="text-muted">We appreciate your purchase and hope you enjoy your items!</p>
                <i class="fas fa-check-circle fa-4x text-success my-3"></i>
                <button type="button" class="btn btn-primary mt-3" data-dismiss="modal">Close</button>
            </div>
            
            
        </div>
    </div>
</div>
